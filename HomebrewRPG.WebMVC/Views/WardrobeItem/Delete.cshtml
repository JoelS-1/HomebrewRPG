@model HomebrewRPG.Models.WardrobeItemModels.WardrobeItemDetail

@{
    ViewBag.Title = "Delete";
}

<div class="row padding">

    <div class="col-sm-12 col-md-6 col-md-offset-2 text-center">
        <h2>Delete</h2>

        <h3>Are you sure you want to delete this item?</h3>
        <div>
            <hr />
            <dl class="dl-horizontal">

                <dt>
                    @Html.DisplayNameFor(model => model.ArmorName)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.ArmorName)
                </dd>
                <hr />
                <dt>
                    @Html.DisplayNameFor(model => model.Description)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Description)
                </dd>

            </dl>

            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                <div class="row padding">
                    <input type="submit" value="Delete Apparel Forever" class="btn bg-danger" />
                </div>
            }
            <div class="row padding">
                <a href='@Url.Action("Index", "WardrobeItem")' class="btn btn-default">Back to Items</a>
            </div>
        </div>
    </div>
</div>