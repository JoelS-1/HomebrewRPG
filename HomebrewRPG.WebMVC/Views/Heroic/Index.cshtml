@model IEnumerable<HomebrewRPG.Models.HeroicModels.HeroicListItem>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
@if (TempData.ContainsKey("SaveResult"))
{
    <div class="alert" alert-success fade in" role="alert">
        @ViewBag.SaveResult
        <button type="button" class="close" data-dismiss="alert">
            <span>&times;</span>
        </button>
    </div>
}
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.HeroicId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.HeroicName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.IsPersonalHeroic)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Description)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.HeroicId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.HeroicName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IsPersonalHeroic)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id=item.HeroicId }) |
                @Html.ActionLink("Details", "Details", new { id = item.HeroicId }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.HeroicId })
            </td>
        </tr>
    }

</table>
